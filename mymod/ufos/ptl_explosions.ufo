particle explosionFlameFlash
{
	init
	{
		image  "sfx/weapons/rocketfire"
		blend  add
		style  facing
		thinkfade  out
		v      "0 0 0"
		offset "0 0 10"
		tps    2.5
	}
	run
	{
		push   pos "20 20"
		mul    *t
		sub    pos "150 150"
		pop    *size
	}
	think { kill }
}

particle explosionDebris
{
	init
	{
		bounce true
		crand	vector "20 20 30"
		add		*s
		pop		*s
		push	*v
		mul		float 80.0
		add		vector "0 0 90"
		crand	vector "60 60 110"
		add		#
		pop		*v
		a		"0 0 -300"
		tps		20.0
		life	1.8
		physics true
	}
	think
	{
		spawn  explosionDebrisBurn
		spawn  explosionDebrisSmoke
	}
}

